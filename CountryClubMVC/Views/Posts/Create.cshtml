@model CountryClubMVC.Models.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.UserID = Session["USERID"];

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box box-info">
        <div class="box-header ">
            <h3 class="box-title">Make a Post</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.TextAreaFor(model => model.Content, new { placeholder = "What's new?", htmlAttributes = new { @class = "form-control",  rows = "3", cols = "50" } })
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })

                        </div>
                        <img class="pull-right" src="~/Content/NewContent/dist/img/camera.png" width="55px" />

                    </div>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" value="Post" class="btn btn-info pull-right">Post</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
